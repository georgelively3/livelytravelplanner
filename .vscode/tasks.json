{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend Server (Gradle)",
			"type": "shell",
			"command": "./gradlew.bat",
			"args": [
				":travel-planner-backend:bootRun"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Frontend Server",
			"type": "shell",
			"command": "ng serve",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			}
		},
		{
			"label": "Start Backend",
			"type": "shell",
			"command": ".\\gradlew.bat :travel-planner-backend:bootRun",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}