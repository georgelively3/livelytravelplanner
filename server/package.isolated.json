{
  "name": "test-runner-isolated",
  "version": "1.0.0",
  "description": "Isolated test runner for persona functionality",
  "scripts": {
    "test:isolated": "jest --testPathPattern=isolated --verbose --no-coverage --setupFilesAfterEnv=[]"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "testMatch": ["**/*.isolated.test.js"],
    "setupFilesAfterEnv": []
  }
}