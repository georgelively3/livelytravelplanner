{
  "name": "lively-travel-planner",
  "version": "1.0.0",
  "description": "Full-stack travel itinerary planning application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install",
    "setup-db": "cd server && npm run setup-db",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm run test:ci",
    "test:coverage": "npm run test:server:coverage && npm run test:client:coverage",
    "test:server:coverage": "cd server && npm run test:coverage",
    "test:client:coverage": "cd client && npm run test:coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test && npm run test:e2e",
    "test:personas": "node test-persona-suite.js",
    "test:personas:unit": "cd server && npm test tests/models/UserPersona.test.js",
    "test:personas:api": "cd server && npm test tests/routes/personas.test.js",
    "test:personas:integration": "cd server && npm test tests/integration/personas.integration.test.js",
    "test:personas:frontend": "cd client && npm test src/tests/components/PersonaBuilder.test.js"
  },
  "keywords": [
    "travel",
    "itinerary",
    "planning",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "Lively Travel Planner",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cypress": "^15.3.0"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
